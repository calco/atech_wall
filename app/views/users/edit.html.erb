<% title "Update Profile" %>

<%= form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email, "Email Address" %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Confirm Password" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :user_language, "Language" %>
    <%= f.select :user_language, [['English', 'en'], ['Arabic', 'ar']], :selected => @user.user_language %>
  </p>
  <p><%= f.submit %></p>
<% end %>
