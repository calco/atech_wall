<% title "Posts" %>

<table width=100%>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Content</th>
  </tr>
  <% for post in @posts %>
    <tr>
      <td><%= post.user %></td>
      <td><%= post.title %></td>
      <td><%= truncate(post.content, :length => 80) %> <%= link_to "Read more", post %></td>
      <% if logged_in? %>
        <td><%= link_to "Edit", edit_post_path(post) %></td>
        <td><%= link_to "Destroy", post, :confirm => 'Are you sure?', :method => :delete %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Post", new_post_path %></p>
